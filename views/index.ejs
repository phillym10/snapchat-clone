        <div class="send-snap" id="send-snap">
            <div class="close-btn" id="send-snap-clsbtn"><i class="fa-solid fa-chevron-down"></i></div><br>
            <div class="title">
                <div>Send to</div>
                <div id="send-snap-username">Drake</div>
            </div>
            <label for="send-snapfile">
                <input type="file" name="send-snapfile" id="send-snapfile" accept="images/*">
                <div class="snap-box">Tap or Click to add image</div>
            </label>
        </div>
        <div class="preview-send-snap" id="preview-send-snap">
            <div class="prvwss-wrapper">
                <img src="imgs/logo.png" id="preview-send-snap-image" alt="">
                <div class="close" id="preview-send-snap-closebtn"><i class="fa-solid fa-xmark"></i></div>
                <div class="sendto">
                    <span class="username" id="preview-send-snap-usrname" onclick="sendMessageSnap(this)">Drake</span><i class="fa-solid fa-play"></i>
                </div>
            </div>
        </div>
        <div class="currentuserprofile" id="currentuserprofile">
            <div class="col-0">
                <div id="curretuser-clsbtn"><i class="fa-solid fa-chevron-down"></i></div>
            </div>
            <div class="col-1">
                <div class="usericon" id="cup-usericon" style="--color: #2869f5;"><i class="fa-solid fa-user"></i></div>
                <div class="userinfo">
                    <div class="name" id="cup-dname"></div>
                    <div class="username" id="cup-username"></div>
                </div>
            </div>
            <div class="col-2">
                <div class="form-container">
                    <div class="title">Display Modes</div>
                    <div class="text">Tap to switch between light and dark mode</div>
                    <div class="switch">
                        <div class="main tgl" id="switch-main"><i class="bi bi-moon-fill"></i> Dark</div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="form-container">
                    <div class="title">User Verification</div>
                    <div class="text" id="cup-vtxt"></div>
                </div>
            </div>
        </div>
        <div class="fr" id="fr">
            <div class="search-bar">
                <div id="frclsbtn"><i class="fa-solid fa-chevron-down"></i></div>
                <input type="text" name="search-people" id="search-fr" autocomplete="off" placeholder="Search...">
            </div>
            <div class="results" id="fr-results"></div>
        </div>
        <div class="slideui" id="chat">
            <div class="cprofile">
                <i class="fa-solid fa-chevron-left" id="chat-clsbtn"></i>
                <div class="usericon" id="chat-usricon"><i class="fa-solid fa-user"></i></div>
                <div class="profilename" id="chat-profilename"></div>
            </div>
            <div class="chatspace" id="chats-chatspace"></div>
            <div class="messagebox">
                <div>
                    <div class="attach" id="chats-msgbox-snap"><i class="fa-regular fa-image"></i></div>
                    <input type="text" name="message" id="chatbox-message" class="message" autocomplete="off" placeholder="Chat">
                </div>
            </div>
        </div>
        <div class="context-menu" id="context-menu">
            <div class="optionreactions">
                <div class="opreact">ğŸ¤£</div>
                <div class="opreact">ğŸ˜¡</div>
                <div class="opreact">ğŸ‘</div>
                <div class="opreact">ğŸ‘</div>
                <div class="opreact">ğŸ’€</div>
            </div>
            <div class="option"><i class="fa-solid fa-bookmark"></i> Save</div>
            <div class="option"><i class="fa-regular fa-copy"></i> Copy</div>
            <div class="option"><i class="fa-solid fa-reply"></i> Reply</div>
            <div class="option red"><i class="fa-regular fa-trash-can"></i> Delete</div>
        </div>
        <div class="col1">
            <div class="user-profile" id="curretuser-openbtn"><i class="fa-solid fa-user"></i></div>
            <div class="span">Chat</div>
            <div class="friend-requests" id="frbtn">
                <i class="fa-solid fa-user-plus"></i>
                <div class="notifs" id="number-offr"></div>
            </div>
        </div>
        <!-- Stories -->
        <div class="col2" id="stories">
            <div class="story add">
                <div class="img"><i class="fa-solid fa-plus"></i></div>
                <div class="span">Add to Story</div>
            </div>
            <div class="story watched">
                <img src="imgs/img1.png" alt="">
                <div class="span">user1000</div>
                <div class="refresh"><i class="fa-solid fa-rotate-left"></i></div>
            </div>
            <div class="story">
                <img src="imgs/img1.png" alt="">
                <div class="span">user10002912929290</div>
            </div>
        </div>
        <!-- Chats -->
        <div class="col3" id="friends-chat-list"></div>
